  },
  "scripts": {
    "serve": "npx @11ty/eleventy --serve",
    "clean": "rm -rf public/*", 
    "build": "npm run clean && npx @11ty/eleventy",
    "post-build": "badgen -j \"Last Publish\" -s \"$(date --date=\"@$(cat config.json | grep 'version' | grep -oe '[0-9]*')\" -I)\" -c blue > publish-badge.svg"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "badgen-cli": "^0.2.0"
  }
}
