{
	"name": "Submelon FP",
	"image": "mcr.microsoft.com/devcontainers/typescript-node:22-bookworm",
	"customizations": {
		"vscode": {
			"settings": {
				"files.exclude": {
					"**/.yarn": true,
					"**/node_modules": true
				}
			},
			"extensions": [
				"ginfuru.better-nunjucks"
			]
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "yarn install"

}
